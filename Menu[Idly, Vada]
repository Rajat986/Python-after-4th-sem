class menu:
    def __init__(self):
        self.l=[]
    def additem(self,item,price):
        self.item=item
        self.price=price
        self.detail=self.item,self.price
        self.l.append(self.detail)
    def show(self):
        print("The menu is: ")
        for i in self.l:
            print(i)
            
m=menu()
m.additem("Idly",10)
m.additem("vada",20)
m.show()
